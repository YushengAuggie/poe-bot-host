# Poe Bots Framework Configuration
# Rename this file to .env to use these settings
# DO NOT COMMIT YOUR ACTUAL .env FILE TO YOUR REPOSITORY!

# API Settings
POE_API_HOST=0.0.0.0
POE_API_PORT=8000
POE_ALLOW_WITHOUT_KEY=true

# Bot Settings
POE_BOT_TIMEOUT=30
POE_BOT_MAX_TOKENS=2000

# Logging Settings
LOG_LEVEL=INFO
DEBUG=false

# Modal Settings
MODAL_APP_NAME=poe-bots

# Third-party API keys
# --------------------
OPENAI_API_KEY=sk-...your-openai-key...
GOOGLE_API_KEY=AIza...your-google-key...

# Bot-specific access keys
# -----------------------
# The system supports multiple naming formats - use any consistent style
# These keys are obtained from your bot's settings page on Poe

# Standard format (uppercase with underscores)
ECHO_BOT_ACCESS_KEY=psk_...your-access-key...
CALCULATOR_BOT_ACCESS_KEY=psk_...your-access-key...
WEATHER_BOT_ACCESS_KEY=psk_...your-access-key...

# Special case for Gemini bots
GEMINI_2_5_FLASH_ACCESS_KEY=psk_...your-access-key...
GEMINI_2_5_PRO_ACCESS_KEY=psk_...your-access-key...
GEMINI_2_0_PRO_ACCESS_KEY=psk_...your-access-key...

# For branded bots (e.g. with initials like "JY-EchoBot")
JY_ECHOBOT_ACCESS_KEY=psk_...your-access-key...

# Web search bot
WEB_SEARCH_BOT_ACCESS_KEY=psk_...your-access-key...

# File analyzer bot
FILE_ANALYZER_BOT_ACCESS_KEY=psk_...your-access-key...

# Function calling bot
FUNCTION_CALLING_BOT_ACCESS_KEY=psk_...your-access-key...
